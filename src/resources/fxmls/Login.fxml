<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>


<GridPane fx:controller="hu.adatb.jetr.controller.LoginController"
	xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"
	styleClass="root">
	<padding>
		<Insets top="25" right="25" bottom="25" left="25" />
	</padding>

	<Text text="${welcome_message}" GridPane.columnIndex="0"
		GridPane.rowIndex="0" GridPane.columnSpan="2">
		<font>
			<Font name="Tahoma" size="20.0" />
		</font>
	</Text>

	<Label text="${eha}" GridPane.columnIndex="0" GridPane.rowIndex="1" />

	<TextField fx:id="ehaTxtFld" GridPane.columnIndex="1"
		GridPane.rowIndex="1" />

	<Label text="${password}" GridPane.columnIndex="0"
		GridPane.rowIndex="2" />

	<PasswordField fx:id="pwFld" GridPane.columnIndex="1"
		GridPane.rowIndex="2" />

	<HBox spacing="10" alignment="bottom_right" GridPane.columnIndex="1"
		GridPane.rowIndex="4">
		<Button defaultButton="true" text="${login_button}" onAction="#doLogin" />
	</HBox>

	<Text GridPane.columnIndex="1" GridPane.rowIndex="6" fx:id="actionTarget"  />


</GridPane>